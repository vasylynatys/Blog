<%- include('./partials/header.ejs') %> <%- include('./partials/nav.ejs') %>

<div class="container py-5" style="max-width: 520px; margin: 0 auto">
    <h1 class="text-center mb-4"><%= title %></h1>
    <p class="text-muted text-center mb-4">
        Fill out the form below to create a new post. All fields are required.
    </p>

    <form method="post" action="/add-post" class="p-4 border rounded shadow-sm">
        <div class="mb-3">
            <label for="author" class="form-label">Username</label>
            <input
                required
                type="text"
                class="form-control"
                id="author"
                name="author"
                placeholder="Enter your username"
            />
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
                required
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="Enter post title"
            />
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea
                required
                class="form-control"
                id="content"
                name="content"
                rows="6"
                placeholder="Enter post content"
            ></textarea>
        </div>

        <button type="submit" class="btn btn-primary w-100">Create Post</button>
    </form>
</div>

<%- include('./partials/footer.ejs') %>
